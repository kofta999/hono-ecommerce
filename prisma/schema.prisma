generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int      @id @default(autoincrement())
  email         String   @unique
  password      String
  username      String   @unique
  bio           String   @default("Avaliable")
  profilePicUrl String   @default("https://static.vecteezy.com/system/resources/previews/003/337/584/large_2x/default-avatar-photo-placeholder-profile-icon-vector.jpg")
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}
